<%= form_for @product do |f| %>
   <div class="field">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %>
   </div>

   <div class="field">
    <%= f.label :price, "値段" %>
    <%= f.number_field :price %>
   </div>

   <div class="field">
     <%= f.label :quantity, "在庫数" %>
     <%= f.number_field :quantity %>
   </div>

   <% if action_name == 'edit'%>
      <% str = '更新する' %>
   <% else %>
      <% str = '登録する' %>
   <% end %>

   <div class="actions">
    <%= f.submit str %>
   </div>
<% end %>
